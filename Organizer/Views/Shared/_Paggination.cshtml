@model TodoViewModel

<a asp-controller="Home" asp-action="Index"
   asp-route-page="@(Model.PageNumber - 1)">
   [PREVIOUS]
</a>

@{
    if(Model.PageNumber + 1 >= Model.PageCount)
    {
        Model.PageNumber = Model.PageNumber - 1;
    }
}

<a asp-controller="Home" asp-action="Index"
    asp-route-page="@(Model.PageNumber + 1)">
    [NEXT]
 </a>