@model TodoViewModel

<form asp-action="Insert" id="form-action" method="post" role="form" asp-route-page="@Model.PageNumber" asp-route-searchString="@Model.SearchString">
    <div asp-validation-summary="All"></div>
        <label asp-for="Todo.Name" ></label>
        <input asp-for="Todo.Id" type="hidden" />
        <input asp-for="Todo.Name" />
        <input type="hidden" asp-for="PageNumber" value="@Model.PageNumber" />
        <input type="hidden" asp-for="SearchString" value="@Model.SearchString" />
        <span asp-validation-for="Todo.Name"></span>
        <input type="submit" id="form-button" value="Add Todo" />
</form>